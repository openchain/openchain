{
  "buildOptions": {
    "emitEntryPoint": true,
    "preserveCompilationContext": true
  },

  "dependencies": {
    "Microsoft.NETCore.App": {
      "version": "1.1.0",
      "type": "platform"
    },
    "Microsoft.AspNetCore.Server.IISIntegration": "1.1.*",
    "Openchain.Server": "0.6.3",

    "Openchain.Anchoring.Blockchain": "0.6.3",
    "Openchain.Sqlite": "0.6.3",
    "Openchain.SqlServer": "0.6.3",
    "Openchain.Validation.PermissionBased": "0.6.3"
  },

  "frameworks": {
    "netcoreapp1.1": {
      "imports": [
        "dotnet5.6",
        "dnxcore50",
        "portable-net45+win+wpa81+wp80+Xamarin.iOS10+MonoAndroid10+MonoTouch10"
      ]
    }
  },

  "publishOptions": {
    "exclude": [
      "**.xproj",
      "**.user",
      "**.vspscc"
    ],
    "include": [
      "data"
    ]
  },

  "scripts": {
    "postpublish": [ "dotnet publish-iis --publish-folder %publish:OutputPath% --framework %publish:FullTargetFramework%" ]
  }
}