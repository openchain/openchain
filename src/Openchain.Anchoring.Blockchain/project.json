{
  "version": "0.5.1-*",
  "description": "Blockchain-based anchoring for Openchain.",
  "authors": [ "Flavien Charlon" ],
  "copyright": "Copyright \u00A9 2015 Coinprism, Inc.",

  "packOptions": {
    "owners": [ "Coinprism" ],
    "projectUrl": "https://www.openchain.org/",
    "licenseUrl": "https://www.apache.org/licenses/LICENSE-2.0",
    "iconUrl": "https://www.openchain.org/package.png"
  },

  "buildOptions": {
    "allowUnsafe": false,
    "warningsAsErrors": true
  },
  
  "runtimeOptions": {
    "gcServer": true
  },

  "dependencies": {
    "Microsoft.Extensions.Logging.Abstractions": "1.0.0",
    "NBitcoin": "2.1.5.9",
    "Openchain.Infrastructure": "0.5.1-*"
  },

  "frameworks": {
    "netstandard1.3": {
      "dependencies": {
        "System.Net.Http": "4.1.0"
      },
      "imports": [
        "dotnet5.6",
        "dnxcore50",
        "portable-net45+win8"
      ]
    },

    "net451": {
      "frameworkAssemblies": {
        "System.Net.Http": "4.0.0.0",
        "System.Collections": "4.0.0.0"
      }
    }
  },

  "scripts": {
    "postpublish": [ "dotnet publish-iis --publish-folder %publish:OutputPath% --framework %publish:FullTargetFramework%" ]
  }
}
